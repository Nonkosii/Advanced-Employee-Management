                                        <th scope="col">Last</th>
                                        <th scope="col">Handle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Sibongiseni</td>
                                        <td>Xaba</td>
                                        <td>Add</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<GeneralDepartmentDialog @ref="generalDepartmentDialog"/>
@code{
    GeneralDepartmentDialog? generalDepartmentDialog;
    GeneralDepartmentDTO DepartmentDTO = new();

    protected override void OnInitialized() => departmentState.GeneralDepart += StateHasChanged;
    void OpenDialog() => generalDepartmentDialog?.OpenDialog();
    public void Dispose() => departmentState.GeneralDepart -= StateHasChanged;
}
